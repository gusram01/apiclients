<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
  body 
    h1= message
    form(action="/api/login", method="post")
      .form__item
        label(for="email") Email
        input(type="email", name="email" id="email" placeholder="some@email.com" aria-label="email-input" autocomplete="email" required)
      .form__item
        label(for="password") Password
        input(type="password", name="password" id="password"  aria-label="password-input" autocomplete="password" required)
      .form__item
        button(type="submit") LogIn